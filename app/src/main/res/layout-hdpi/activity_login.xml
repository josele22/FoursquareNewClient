<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_action_bar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:background="@drawable/logo_app"
            android:id="@+id/letterfoursquare" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:background="@drawable/logo_app2"
            android:id="@+id/letternewclient" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/ic_cover"/>

        <FrameLayout
            android:id="@+id/FlashBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <!-- flash bar content -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por favor,active su GPS"
                android:textSize="15dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/txtgps" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarFirst"
                android:layout_marginTop="35dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando"
                android:textSize="15dp"
                android:layout_marginTop="110dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/txtcargando" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView2"
                android:src="@drawable/ic_footer"
                android:layout_gravity="center_horizontal|bottom"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>